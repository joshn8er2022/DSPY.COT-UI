generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/dspy_chain_of_thought_agent/app/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model ApiCredentials {
  id          String   @id @default(cuid())
  provider    String   // "openai", "anthropic", "custom"
  apiKey      String
  apiUrl      String?  // For custom endpoints
  modelName   String?  // Default model to use
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([provider])
}

model ChainOfThoughtQuery {
  id            String   @id @default(cuid())
  query         String
  signature     String   // DSPy-style signature used
  reasoningSteps Json?   // Array of reasoning steps
  finalAnswer   String?
  provider      String   // Which API provider was used
  model         String?  // Which model was used
  status        String   @default("processing") // "processing", "completed", "failed"
  error         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
